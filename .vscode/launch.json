  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Main Debug",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
          "run",
          "debug"
      ],
      "console": "internalConsole",
      "outputCapture": "std",
      "env": {
          "ENV": "development",
          "NODE_ENV": "development",
      },
      "preLaunchTask": "npm: build",
      "sourceMaps": true,
      "port": 9229,
      "outFiles": ["${workspaceFolder}/dist/**/*"]
  },
  ]
}